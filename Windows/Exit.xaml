<Window x:Class="ST10252746_PROG6221_POE.Windows.Exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10252746_PROG6221_POE.Windows"
        mc:Ignorable="d"
        Title="Exit" Height="450" Width="800">
    <Grid>
        <Image Source="/images/welcomeWindow.jpg" Stretch="Fill" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtHeading" HorizontalAlignment="Center" Margin="0,27,0,0" TextWrapping="Wrap" Text="THANK YOU FOR USING MY RECIPE MANAGEMENT APP!" VerticalAlignment="Top" Width="456" FontFamily="Times New Roman" FontSize="48" FontWeight="Bold" TextAlignment="Center" SelectionBrush="#FF88592F" BorderBrush="#FF88592F">
            <TextBox.Background>
                <SolidColorBrush Color="#FF88592F" Opacity="0.8"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnExit" Content="CONFIRM EXIT" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Width="284" Height="27" FontFamily="Times New Roman" FontWeight="Bold" FontSize="16" Background="Red" BorderBrush="Black" AutomationProperties.HelpText="Click to confirm exit and the appllication will stop running" Click="btnExit_Click" Foreground="White"/>
    </Grid>
</Window>
