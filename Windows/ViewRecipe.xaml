<Window x:Class="ST10252746_PROG6221_POE.Windows.ViewRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10252746_PROG6221_POE.Windows"
        mc:Ignorable="d"
        Title="ViewRecipe" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblHeading" Content="View Recipe" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="rtbRecipe" Margin="191,116,169,29">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnMainMenu" Content="Return to Main Menu" HorizontalAlignment="Left" Margin="41,384,0,0" VerticalAlignment="Top" Height="21" Click="btnMainMenu_Click"/>
        <Button x:Name="btnScaleProceed" Content="Proceed Scaling" HorizontalAlignment="Left" Margin="504,67,0,0" VerticalAlignment="Top" Width="127" Click="btnScaleProceed_Click"/>
        <Button x:Name="btnReset" Content="Reset Recipe" HorizontalAlignment="Left" Margin="43,197,0,0" VerticalAlignment="Top" Width="114" Click="btnReset_Click"/>
        <RadioButton x:Name="rbHalf" Content="0,5 (Half)" HorizontalAlignment="Left" Margin="237,82,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbDouble" Content="2 (Double)" HorizontalAlignment="Left" Margin="324,82,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbTriple" Content="3 (Triple)" HorizontalAlignment="Left" Margin="421,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtScale" HorizontalAlignment="Left" Margin="237,59,0,0" TextWrapping="Wrap" Text="Select scaling option below:" VerticalAlignment="Top" Width="249"/>
        <Button x:Name="btnClearRecipe" Content="Clear Recipe" HorizontalAlignment="Left" Margin="44,257,0,0" VerticalAlignment="Top" Width="114" Click="btnClearRecipe_Click"/>
        <Button x:Name="btnScale" Content="Scale Recipe" HorizontalAlignment="Left" Margin="44,67,0,0" VerticalAlignment="Top" Width="114" Click="btnScale_Click"/>
    </Grid>
</Window>
